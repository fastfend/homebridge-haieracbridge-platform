{
  "pluginAlias": "Haier AC Bridge",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "header",
  "footerDisplay": "Remember that you need Haier AC bridge app on some Android device installed for this plugin to work",
  "schema": {
    "type": "object",
    "properties": {
      "ip": {
        "title": "IP address",
        "type": "string",
        "required": true,
        "format": "ipv4",
        "placeholder": "192.168.0.1",
        "description": "IP address displayed in Android Bridge app"
      },
      "token": {
        "title": "Token",
        "type": "string",
        "required": true,
        "minLength": 15,
        "maxLength": 15,
        "placeholder": "nuxr2qNzdMb9OJX",
        "description": "Token generated by Android Bridge app"
      },
      "polling": {
        "title": "Polling in seconds",
        "type": "integer",
        "minimum": 1,
        "maximum": 60,
        "required": true,
        "default": 5,
        "description": "Token generated by Android Bridge app"
      },
      "useFanMode": {
        "title": "Enable Fan Mode",
        "type": "boolean",
        "required": true,
        "default": true,
        "description": "When enabled, turning on Fan first in Home app, when AC is turned off, will set Fan mode on device"
      },
      "useDryMode": {
        "title": "Expose Dry Mode",
        "type": "boolean",
        "required": true,
        "default": true,
        "description": "When enabled, switch controlling Dry Mode will appear within accessory"
      },
      "healthModeType": {
        "title": "Health Mode Type",
        "type": "string",
        "required": true,
        "default": "SHOW",
        "description": "When 'Show' is selected, switch controlling Health Mode will appear within accessory.\n When 'Force' is selected, switch controlling Health Mode will NOT appear within accessory, but instead Health Mode will be always enabled",
        "oneOf": [
          { "title": "Show", "enum": ["SHOW"] },
          { "title": "Force", "enum": ["FORCE"] },
          { "title": "Off", "enum": ["OFF"] }
        ],
        "pattern": "(^FORCE$|^SHOW$|^OFF$)"
      },
      "swingType": {
        "title": "Swing Control Type",
        "type": "string",
        "required": true,
        "default": "INDIVIDUAL",
        "description": "When 'Individual' is selected, both switches controlling Up-Down swing and Right-Left will appear within accessory.\n When 'Both' is selected, fan accessory will have oscillate option instead",
        "oneOf": [
          { "title": "Individual", "enum": ["INDIVIDUAL"] },
          { "title": "Both", "enum": ["BOTH"] },
          { "title": "Off", "enum": ["OFF"] }
        ],

        "pattern": "(^BOTH$|^INDIVIDUAL$|^OFF$)"
      },
      "lang": {
        "title": "Language Configuration",
        "type": "object",
        "properties": {
          "acdevice_name": {
            "title": "Accessory Name",
            "type": "string",
            "required": false,
            "minLength": 2,
            "maxLength": 32,
            "placeholder": "AC",
            "description": "Base name of accessory"
          },
          "acdevice_fan": {
            "title": "Fan Subaccessory Name",
            "type": "string",
            "required": false,
            "minLength": 2,
            "maxLength": 32,
            "placeholder": "Fan",
            "description": "Name of fan subaccessory"
          },
          "acdevice_fan_rightleft": {
            "title": "RightLeft Swing Subaccessory Name",
            "type": "string",
            "required": false,
            "minLength": 2,
            "maxLength": 32,
            "placeholder": "RightLeft Swing",
            "description": "Name of RightLeft Swing subaccessory"
          },
          "acdevice_fan_updown": {
            "title": "UpDown Swing Subaccessory Name",
            "type": "string",
            "required": false,
            "minLength": 2,
            "maxLength": 32,
            "placeholder": "UpDown Swing",
            "description": "Name of UpDown Swing subaccessory"
          },
          "acdevice_healthmode": {
            "title": "Health Mode Subaccessory Name",
            "type": "string",
            "required": false,
            "minLength": 2,
            "maxLength": 32,
            "placeholder": "Health Mode",
            "description": "Name of Health Mode subaccessory"
          },
          "acdevice_drymode": {
            "title": "Dry Mode Subaccessory Name",
            "type": "string",
            "required": false,
            "minLength": 2,
            "maxLength": 32,
            "placeholder": "Dry Mode",
            "description": "Name of Dry Mode subaccessory"
          }
        }
      }
    }
  },
  "form": null,
  "display": null
}
